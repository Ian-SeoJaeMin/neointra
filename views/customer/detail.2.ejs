                                        <%      hospital.extra.forEach(function(extra){ %>
                                            <li>
                                                <button type="button" class="btn btn-default btn-xs"><%- extra['부가서비스'] %></button>
                                            </li>
                                        <%      }) %>
                                        <% } else { %> 
                                            <li>
                                            <span class="dark">이용안함</span>
                                            </li>
                                        <% } %>
                                    </ul>                                    
