<% include ./header %>
    <div class="container body">
        <div class="main_container">
            <% include ../../../includes/sidemenu.ejs %>
            <% include ../../../includes/topnav.ejs %>

            <div class="right_col" role="main">
                <div class="page-title">
                    <div class="title_left">
                        <h3> 게시판 등록 </h3>       
                    </div>
                </div>
                <div class="row">                    
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <div class="x_panel">
                            <div class="x_content">
                                <form class="form-horizontal form-label-left">

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                            명칭
                                            <span class="require">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">                                            
                                            <input id="board-name" type="text" class="form-control" required name="board-name" placeholder="게시판 명칭을 입력해주세요. (20자)" >
                                        </div>
                                    </div>

                                    <div class="divider-dashed"></div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">게시판 사용</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" class="flat" value="1" name="board-use" checked> 미사용
                                                </label>                                                
                                                <label>
                                                    <input type="radio" class="flat" value="0" name="board-use"> 사용
                                                </label>
                                            </div>                                            
                                        </div>
                                    </div>

                                    <div class="divider-dashed"></div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">홈메뉴 표기</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" class="flat" value="1" name="board-home">
                                                </label>                                                                                                
                                            </div>                                            
                                        </div>
                                    </div>

                                    <div class="divider-dashed"></div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">댓글</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="radio">
                                                <label>
                                                    <input type="radio" class="flat" value="1" name="board-replys" checked> 미사용
                                                </label>                                                
                                                <label>
                                                    <input type="radio" class="flat" value="0" name="board-replys"> 사용
                                                </label>
                                            </div>                                            
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                            댓글양식(선택)
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">                                            
                                            <textarea class="form-control" rows="5" id="board-reply-template" disabled placeholder="댓글의 입력양식을 정해주세요."></textarea>
                                        </div>
                                    </div>

                                    <div class="divider-dashed"></div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">열람권한</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <select class="form-control selectpicker show-tick" title="열람권한" data-width="fit" data-live-search="true" data-size="5">
                                                <option value="" selected>전체</option>
                                                <% areas.forEach(function(area){ %>
                                                    <option value="<%= area['지사코드'] %>"><%= area['지사명'] %></option>
                                                <% }) %>
                                            </select>                               
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">수정제한 해제</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" class="flat" value="1" name="board-editable">
                                                </label>                                                                                                
                                            </div>                                            
                                        </div>
                                    </div>
                                    
                                    
                                    <div class="divider-dashed"></div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                            설명
                                            <span class="require">*</span>
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12 col-xs-12">
                                            <textarea class="form-control" rows="5" id="board-description" required placeholder="게시판의 용도를 간단하게 입력해주세요."></textarea>
                                        </div>
                                    </div>

                                    <div class="divider-dashed"></div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">게시판 아이콘</label>
                                        <div class="col-md-6 col-sm-6 col-xs-12 col-xs-12">
                                            <div class="form-control board-icon">
                                                <ul class="list-unstyled list-inline board-icon-list">
                                                </ul>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="divider-dashed"></div>

                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                            카카오톡 그룹방                                            
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">                                            
                                            <input id="board-kakao" type="text" class="form-control" name="board-kakao" placeholder="카카오톡 그룹방 명칭을 입력해주세요." >
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label class="control-label col-md-3 col-sm-3 col-xs-12">
                                            카카오톡 그룹방 링크                                           
                                        </label>
                                        <div class="col-md-6 col-sm-6 col-xs-12">                                            
                                            <input id="board-kakao-link" type="text" class="form-control" name="board-kakao-link" placeholder="카카오톡 그룹방 링크를 입력해주세요." >
                                        </div>
                                    </div>

                                    <div class="divider"></div>

                                    <div class="form-group">
                                        <div class="col-md-9 col-md-6 col-sm-6 col-xs-12 col-xs-12 col-md-offset-3">
                                            <a href="/board/manage" class="btn btn-default">취소</a>                                            
                                            <button type="submit" class="btn btn-primary" id="board-save">저장</button>                                            
                                        </div>
                                    </div>

                                </form>  
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
<% include ./footer %>
