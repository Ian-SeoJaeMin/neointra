<div class="form-group">
    <label class="control-label col-md-3 col-sm-3 col-xs-12">
        <%= field['label'] %>
        <% if (field['require']) { %> 
        <span class="require red">*</span>
        <% } %>
    </label>
    <div class="col-md-6 col-sm-6 col-xs-12">
        <div class="input-group" style="width:230px;">
            <span class="input-group-btn">
                <button type="button" class="btn btn-default datemonth" data-range="left"><i class="fa fa-angle-left"></i></button>                                                    
            </span>
            <% var thisDate = value || moment().format('YYYY-MM-DD') %>
            <% var thisDateFormat = moment(value).format(field['format']) %>
            <input type='text' class="form-control datepicker" data-label="<%=field['label']%>" data-format="<%= field['format'] %>" data-name="<%=field['name']%>" readonly data-value="<%= thisDate %>" value="<%= thisDateFormat %>" />
            <span class="input-group-btn">
                <button type="button" class="btn btn-default datemonth" data-range="right"><i class="fa fa-angle-right"></i></button>                                                    
            </span>                                                
        </div>
        <p class="form-text text-success m-b-none m-t-sm <%- field['placeholder'].length ? '' : 'hidden'%>"><i class="fa fa-hand-o-right"></i> <em><%=field['placeholder']%></em></p>
    </div>
</div>
<% if (!last) { %> 
<div class="divider-dashed"></div>
<% } %>
